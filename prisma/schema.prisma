datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Item {
  id               Int    @id @default(autoincrement())
  item_code        String
  item_description String
  zahir_code       String
  price            Float
  image            String
  init_stock       Int
  current_stock    Int
  create_by        String
  update_by        String

  produksis       Produksi[]
  stock_histories StockHistory[]
}

model Supplier {
  id            Int    @id @default(autoincrement())
  supplier_name String
  alamat        String
  phone         String

  produksis    Produksi[]
  StockHistory StockHistory[]
}

model Unit {
  id        Int    @id @default(autoincrement())
  unit_name String

  produksis    Produksi[]
  StockHistory StockHistory[]
}

model Clasification {
  id                 Int    @id @default(autoincrement())
  clasification_name String

  produksis    Produksi[]
  StockHistory StockHistory[]
}

model Produksi {
  id                     Int @id @default(autoincrement())
  item_code_id           Int
  zahir_code_id          Int
  item_description_id    Int
  price_id               Int
  unit_name_id           Int
  supplier_name_id       Int
  clasifications_name_id Int
  init_stock_id          Int
  current_stock_id       Int

  item          Item          @relation(fields: [item_code_id], references: [id])
  supplier      Supplier      @relation(fields: [supplier_name_id], references: [id])
  unit          Unit          @relation(fields: [unit_name_id], references: [id])
  clasification Clasification @relation(fields: [clasifications_name_id], references: [id])
}

model StockHistory {
  id_history             Int      @id @default(autoincrement())
  item_code_id           Int
  qty                    Int
  create_at              DateTime @default(now())
  category               Int
  image_id               Int
  create_by_id           String
  update_by_id           String
  current_stock_id       Int
  unit_name_id           Int
  supplier_name_id       Int
  clasifications_name_id Int

  item          Item          @relation(fields: [item_code_id], references: [id])
  supplier      Supplier      @relation(fields: [supplier_name_id], references: [id])
  unit          Unit          @relation(fields: [unit_name_id], references: [id])
  clasification Clasification @relation(fields: [clasifications_name_id], references: [id])
}

model Admin {
  id String @id @default(uuid())
  fullname   String
  username   String   @unique
  password   String
  created_at DateTime @default(now())
}
